{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": false,
    "baseUrl": "./",
    "paths": {
      "@api/services/*": ["src/api/services/auth/*"],
      "@assets/*": ["src/assets/*"],
      "@enviroment": ["src/environment/index.ts"],
      "@features/*": ["src/features/*"],
      "@layout/*": ["src/layout/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"],
      "@store/*": ["src/store/*"],
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
